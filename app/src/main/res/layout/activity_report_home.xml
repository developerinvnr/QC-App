<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".got.ReportHomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/back_nav"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="1dp"
                android:src="@drawable/ic_backnav"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Report"
                android:textColor="@android:color/white" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/btn_sowing_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sowing Pending Report"
        android:textAllCaps="false"
        android:background="@drawable/labelbackground"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/btn_tp_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transplanting Pending Report"
        android:textAllCaps="false"
        android:background="@drawable/labelbackground"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/btn_gotobservation_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOT Observation Pending Report"
        android:textAllCaps="false"
        android:background="@drawable/labelbackground"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward"
        android:paddingEnd="10dp"/>

    <Button
        android:id="@+id/btn_biotech_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biotech Test Initiative Report"
        android:textAllCaps="false"
        android:background="@drawable/labelbackground"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward"
        android:paddingEnd="10dp"/>

</LinearLayout>