<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_main"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtsrno"
        style="@style/rowTextStyle"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginEnd="1dp"
        android:text="#"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_check"
        style="@style/rowTextStyle"
        android:layout_width="88dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Select"
        android:textSize="14sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_view"
        style="@style/rowTextStyle"
        android:layout_width="88dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="View"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="View"
        android:visibility="gone"
        android:backgroundTint="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_resultDate"
        style="@style/rowTextStyle"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Result Date"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_sampleno"
        style="@style/rowTextStyle"
        android:textAlignment="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="Sample No."
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_ppn"
        style="@style/rowTextStyle"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="2dp"
        android:text="PPN"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_female"
        style="@style/rowTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="2dp"
        android:text="Female"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_male"
        style="@style/rowTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Male"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_oofType"
        style="@style/rowTextStyle"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:textAlignment="center"
        android:text="OOF Type"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_remark"
        style="@style/rowTextStyle"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="Remark"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_gpper"
        style="@style/rowTextStyle"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="GP %"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>