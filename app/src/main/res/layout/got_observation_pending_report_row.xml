<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_srno_ob"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="#"
        android:textStyle="bold"
        style="@style/rowTextStyle" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_crop_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Crop"
        style="@style/rowTextStyle"
        android:textStyle="bold"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_spCode_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="SP Code"
        style="@style/rowTextStyle"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_variety_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Variety"
        style="@style/rowTextStyle"
        android:textStyle="bold"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_lotno_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Lot No."
        android:textStyle="bold"
        style="@style/rowTextStyle"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_sampleNo_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Sample No."
        style="@style/rowTextStyle"
        android:textStyle="bold"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_tl_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="TL"
        style="@style/rowTextStyle"
        android:textStyle="bold"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_dot_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/rowTextStyle"
        android:text="DOT"
        android:textStyle="bold"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_bedNo_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Bed No"
        android:textStyle="bold"
        style="@style/rowTextStyle"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tv_direction_ob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        style="@style/rowTextStyle"
        android:text="Direction"/>

</LinearLayout>