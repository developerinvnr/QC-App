<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_srno"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="#"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_doa"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="DOA"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_crop"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="Crop"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_spcode"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="SP Code"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_variety"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="Variety"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_lotno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Lot No."
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_sample"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sample"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_nob"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="NOB"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_gotStatus"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="GOT Status"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_pdLoc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="PD LOC"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_organiser"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Organiser"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_farmer"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Farmer"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_pp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="PP"
            style="@style/rowTextStyle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_sloc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="SLOC"
            style="@style/rowTextStyle"/>

    </LinearLayout>

</LinearLayout>